{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "airbnb"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "extra-rules",
        "react",
        "unicorn"
    ],
    "rules": {
        "strict": 0,
        "curly": [
            "error",
            "all"
        ],
        "import/order": [
            "error",
            {
                "newlines-between": "always",
                "alphabetize": {
                    "order": "asc",
                    "caseInsensitive": false
                }
            }
        ],
        "no-alert": "error",
        "no-console": "error"
    }
}